<UserControl x:Class="csharp_project.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:csharp_project"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="730">
    <Grid Background="White">
        <Label Content="Settings" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <Button Content="Delete all Items" HorizontalAlignment="Center" VerticalAlignment="Center" Width="125" Click="Delete_DB_Click"/>
        <Button Content="Delete Log" HorizontalAlignment="Right" VerticalAlignment="Center" Width="125" Click="Delete_Log_Click"/>
        <Label x:Name="l_log_delete" Content="Log deleted successfully!" VerticalAlignment="Bottom" Height="27" HorizontalContentAlignment="Right" Visibility="Hidden"/>
        <Label x:Name="l_db_delete" Content="Adding to Database failed!" VerticalAlignment="Bottom" Height="27" Width="700"  HorizontalContentAlignment="Right" Visibility="Hidden"/>
    </Grid>
</UserControl>
