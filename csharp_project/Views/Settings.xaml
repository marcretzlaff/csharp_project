<UserControl x:Class="csharp_project.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:csharp_project"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="730">
    <Grid Background="White">
        <Label Content="Settings" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <Button Content="Delete all Items" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="125" Click="Delete_DB_Click"/>
        <Button Content="Delete Log" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="125" Click="Delete_Log_Click"/>
    </Grid>
</UserControl>
